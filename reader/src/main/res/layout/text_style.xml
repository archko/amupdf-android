<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_bg"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/layout_font_size"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_font_size"
                android:textColor="@android:color/primary_text_dark" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">

                <SeekBar
                    android:id="@+id/font_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:progressDrawable="@drawable/seek_line"
                    android:thumb="@drawable/seek_thumb" />

                <TextView
                    android:id="@+id/font_size_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-1dp"
                    android:text="16"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_font_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_font_face"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:id="@+id/font_face_selected"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:enabled="false"
                android:gravity="center"
                android:text="系统字体"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:id="@+id/font_face_change"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:gravity="center"
                android:text="更改字体"
                android:textColor="@android:color/primary_text_dark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_linespace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_line_space"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:id="@+id/line_space_label"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="1.48倍"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:id="@+id/linespace_minus"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:gravity="center"
                android:padding="0dp"
                android:text="-"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/linespace_plus"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:gravity="center"
                android:padding="0dp"
                android:text="+"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_font_color"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:id="@+id/color_label"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="颜色Color"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/bg_setting"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:gravity="center"
                android:text="@string/menu_font_bg"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:id="@+id/fg_setting"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_menu_button"
                android:gravity="center"
                android:text="@string/menu_font_fg"
                android:textColor="@android:color/primary_text_dark" />
        </LinearLayout>

    </LinearLayout>
</layout>