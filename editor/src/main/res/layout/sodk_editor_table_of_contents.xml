<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/sodk_editor_toc_bg_color"
        >

        <com.artifex.sonui.editor.SOTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sodk_editor_toc_title_textcolor"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="Bookmarks" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_button"
            android:layout_alignParentRight="true"
            android:text="@string/sodk_editor_cancel"
            android:textColor="@color/sodk_editor_toc_cancel_textcolor"
            android:background="@drawable/sodk_editor_toc_link"
            android:textSize="20dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/sodk_editor_toc_divider_color"
        android:dividerHeight="1dp"
        >
    </ListView>

</LinearLayout>

