<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sodk_editor_number_format_popup">

    <com.artifex.sonui.editor.SOTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sodk_editor_edit_font"
        style="@style/sodk_editor_wheel_title_style"
        android:paddingBottom="4dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <kankan.wheel.widget.WheelView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/left_wheel"
            android:layout_marginRight="5dp"/>

        <kankan.wheel.widget.WheelView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/right_wheel"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</LinearLayout>
