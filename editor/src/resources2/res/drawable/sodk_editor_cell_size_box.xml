<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/sodk_editor_cell_box_disabled_fill" />
            <stroke android:color="@color/sodk_editor_cell_box_disabled_stroke" android:width="1dp" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <solid android:color="@color/sodk_editor_cell_box_focused_fill" />
            <stroke android:color="@color/sodk_editor_cell_box_focused_stroke" android:width="3dp" />
        </shape>
    </item>

    <item android:state_selected="false" android:state_enabled="true">
        <shape>
            <solid android:color="@color/sodk_editor_cell_box_deselected_fill" />
            <stroke android:color="@color/sodk_editor_cell_box_deselected_stroke" android:width="1dp" />
        </shape>
    </item>

</selector>
